@model Corona_system.ViewModels.InformationViewModel

@{
    ViewData["Title"] = "Client Information";
}

<h1>Client Information</h1>





<div>
    <h3>Client Details:</h3>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Client.Id</dd>
    </dl>
</div>

<div>
    <div>
        <a asp-action="CreateForClient" asp-route-clientId="@Model.Client.Id">Create New</a>

        <!-- Table displaying client's vaccinations -->
    </div>

    <h3>Vaccinations:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Vaccination Date</th>
                <th>Vaccine Manufacturer</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vaccinations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VaccinationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VaccineManufacturer)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-controller="clients" asp-action="Index">Back to List</a>
</div>
